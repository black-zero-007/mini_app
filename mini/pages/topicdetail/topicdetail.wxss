/* pages/topicdetail/topicdetail.wxss */
.img .cover{
  position: relative;
}

.img .cover image{
  width: 100%;
  
}

.img .cover .topic_text{
  width: 40%;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: white;
}

.img .topic_text .row{
  font-weight: 700;
}

.img .topic_text .text{
  font-size: small;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}


.container{
  padding: 20rpx;
  -moz-column-count:2; /* Firefox */
  -webkit-column-count:2; /* Safari and Chrome */
  column-count:2;

  -moz-column-gap:20rpx; /* Firefox */
  -webkit-column-gap:20rpx; /* Safari and Chrome */
  column-gap:20rpx;
}

.container .item{
  break-inside: avoid-column;
  -webkit-column-break-inside: avoid; /* Safari and Chrome */
  border:1rpx solid #96CDCD;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.container .fixed{
  position: relative;
}

.container .item .fixed image{
  border-top-left-radius: 15rpx;
  border-top-right-radius:15rpx;
  width: 100%;
  display: block;
}

.container .item .bottom_sty{
  position: absolute;
  bottom: 0;
  padding: 8rpx 0;
  width: 100%;
  height: 45rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
}

.container .item .item_user{
  color: white;
  font-size: small;
}

.container .bottom_sty .item_img{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 5rpx;
  /* border: 1rpx solid red; */
  width: 60rpx;
}

.container .bottom_sty image{
  width:40rpx;
  height: 40rpx;
}

.container .bottom_sty .item_viewer{
  color: #96CDCD;
  font-size: small;
  margin-left: 5rpx;
}

.container .item .item_topic{
  color: #00FF00;
}

.container .item .item_content{
  margin-bottom: 5rpx;
  margin-left: 5rpx;
}
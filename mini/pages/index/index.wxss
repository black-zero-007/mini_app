/* pages/index/index.wxss */
.search_box{
  /* border:1rpx solid red; */
  margin:0 20rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.search_box .ipt_style{
  border:1rpx solid #BBFFFF;
  border-radius: 25rpx;
  padding-left: 25rpx;
  width: 80%;
}

.search_box .btn{
  border: 1rpx solid red;
  
}

.img{
  margin: 10rpx;
}

.img .swiper{
  width: 100%;
  height: 400rpx;
}

.img .swiper image{
  width: 100%;
  height: 100%;
}

.classify {
  padding: 10rpx;
  padding-bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.classify .icon image{
  height: 100rpx;
  width: 100rpx;
}

.classify .icon .item{
  display:flex;
  flex-direction: column;
  align-items: center;
}

.container{
  padding: 20rpx;
  -moz-column-count:2; /* Firefox */
  -webkit-column-count:2; /* Safari and Chrome */
  column-count:2;

  -moz-column-gap:20rpx; /* Firefox */
  -webkit-column-gap:20rpx; /* Safari and Chrome */
  column-gap:20rpx;
}

.container .item{
  break-inside: avoid-column;
  -webkit-column-break-inside: avoid; /* Safari and Chrome */
  border:1rpx solid #96CDCD;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.container .fixed{
  position: relative;
}

.container .item .fixed image{
  border-top-left-radius: 15rpx;
  border-top-right-radius:15rpx;
  width: 100%;
  display: block;
}

.container .item .bottom_sty{
  position: absolute;
  bottom: 0;
  padding: 8rpx 0;
  width: 100%;
  height: 45rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
}

.container .item .item_user{
  color: white;
  font-size: small;
}

.container .bottom_sty .item_img{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 5rpx;
  /* border: 1rpx solid red; */
  width: 60rpx;
}

.container .bottom_sty image{
  width:40rpx;
  height: 40rpx;
}

.container .bottom_sty .item_viewer{
  color: #96CDCD;
  font-size: small;
  margin-left: 5rpx;
}

.container .item .item_topic{
  color: #00FF00;
}

.container .item .item_content{
  margin-bottom: 5rpx;
  margin-left: 5rpx;
}
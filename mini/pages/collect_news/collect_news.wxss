/* pages/collect_news/collect_news.wxss */
.none{
  position: fixed;
  top: 50%;
  left: 44%;
  right: 38%;
  color: 	#7AC5CD;
}

.container{
  background-color: #AEEEEE;
  border-top: 1rpx solid #AEEEEE;
}

.container .item{
  padding: 25rpx 20rpx 10rpx 20rpx;
  margin: 25rpx 25rpx 10rpx 25rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border-radius: 15rpx;
  background-color: white;
}

.container .topic{
  color: #00FF7F;
  margin-bottom: 15rpx;
}

.container .News{
  width: 100%;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #00C5CD;
}

.container .News .intro{
  margin-bottom: 10rpx;
}

.container .News image{
  border-radius: 15rpx;
}

.container .bottom{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  font-size: small;
}

.container .bottom .user{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container .user image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin-right: 10rpx;
}

.container .bottom .viewer{
  display: flex;
  flex-direction: row;
  align-items: center;
  
}

.container .viewer image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 5rpx;
}